<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EventDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/reminder_5_min3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminderTextView"
            android:layout_alignStart="@+id/reminderTextView"
            android:layout_alignEnd="@+id/reminderTextView"
            android:clickable="false"
            android:padding="5dp"
            android:text="@string/reminder_5_min"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/reminder_15_min3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_5_min3"
            android:layout_alignStart="@+id/reminder_5_min3"
            android:layout_alignEnd="@+id/reminder_5_min3"
            android:clickable="false"
            android:padding="5dp"
            android:text="@string/reminder_15_min"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/reminder_30_min3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_15_min3"
            android:layout_alignStart="@+id/reminder_15_min3"
            android:layout_alignEnd="@+id/reminder_15_min3"
            android:clickable="false"
            android:padding="5dp"
            android:text="@string/reminder_30_min"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/reminder_1_hour3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_30_min3"
            android:layout_alignStart="@+id/reminder_30_min3"
            android:layout_alignEnd="@+id/reminder_30_min3"
            android:clickable="false"
            android:padding="5dp"
            android:text="@string/reminder_1_hour"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/reminder_1_day3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_1_hour3"
            android:layout_alignStart="@+id/reminder_1_hour3"
            android:layout_alignEnd="@+id/reminder_1_hour3"
            android:clickable="false"
            android:padding="5dp"
            android:text="@string/reminder_1_day"
            android:textColor="@color/dark_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eventNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            android:text="@string/event_name"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventNameTextView"
            android:layout_alignStart="@+id/eventNameTextView"
            android:layout_alignEnd="@+id/eventNameTextView"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="@string/event_description"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/startDateTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionTextView"
            android:layout_alignStart="@+id/descriptionTextView"
            android:layout_alignEnd="@+id/descriptionTextView"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="@string/start_date_and_time"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/endDateTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startDateTimeTextView"
            android:layout_alignStart="@+id/startDateTimeTextView"
            android:layout_alignEnd="@+id/startDateTimeTextView"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="@string/end_date_and_time"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/endDateTimeTextView"
            android:layout_alignStart="@+id/endDateTimeTextView"
            android:layout_alignEnd="@+id/endDateTimeTextView"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="@string/location"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationTextView"
            android:layout_alignStart="@+id/locationTextView"
            android:layout_alignEnd="@+id/locationTextView"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="@string/category"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/repeatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryTextView"
            android:layout_alignStart="@+id/categoryTextView"
            android:layout_alignEnd="@+id/categoryTextView"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="@string/repeat"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/reminderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repeatTextView"
            android:layout_alignStart="@+id/repeatTextView"
            android:layout_alignEnd="@+id/repeatTextView"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:text="@string/reminder"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/editEventButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/deleteEventButton"
            android:layout_alignStart="@+id/deleteEventButton"
            android:layout_alignEnd="@+id/deleteEventButton"
            android:layout_marginBottom="20dp"
            android:background="@color/light_blue"
            android:padding="10dp"
            android:text="@string/edit"
            android:textColor="@color/dark_blue"
            android:textSize="20sp" />

        <Button
            android:id="@+id/deleteEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/light_blue"
            android:padding="10dp"
            android:text="@string/delete"
            android:textColor="@color/dark_blue"
            android:textSize="20sp" />
    </RelativeLayout>

</FrameLayout>