<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calendar.fragments.WeekFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/month2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            android:text="@{month}"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/year2"
            app:layout_constraintEnd_toStartOf="@+id/year2"
            app:layout_constraintTop_toTopOf="@id/year2" />

        <TextView
            android:id="@+id/year2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@{year}"
            android:textColor="@color/grey"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/goodMorning2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goodMorning"
            android:layout_alignStart="@+id/goodMorning"
            android:layout_alignEnd="@+id/goodMorning"
            android:text="@string/ownerName"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/goodMorning"
            app:layout_constraintStart_toStartOf="@+id/goodMorning"
            app:layout_constraintTop_toBottomOf="@+id/goodMorning" />

        <TableLayout
            android:id="@+id/schedule_table"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/goodMorning2"
            app:layout_constraintTop_toBottomOf="@+id/year2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dayOfWeek01"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dayOfWeek02"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dayOfWeek03"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dayOfWeek04"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded"
                    android:padding="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/light_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dayOfWeek05"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dayOfWeek06"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dayOfWeek07"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date01"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date02"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date03"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date04"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded"
                    android:padding="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/light_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date05"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date06"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date07"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/daybutton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/weekbutton"
            android:layout_alignBottom="@+id/weekbutton"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/weekbutton"
            android:backgroundTint="@color/white_blue"
            android:text="@string/day"
            android:textColor="@color/dark_blue_green"
            app:layout_constraintBottom_toBottomOf="@+id/weekbutton"
            app:layout_constraintEnd_toStartOf="@+id/weekbutton"
            app:layout_constraintTop_toTopOf="@+id/weekbutton"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button"
            android:layout_width="327dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/light_blue"
            android:text="@string/set_reminder"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monthbutton" />

        <Button
            android:id="@+id/monthbutton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignBottom="@+id/divider"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white_blue"
            android:text="@string/month"
            android:textColor="@color/dark_blue_green"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule_table" />

        <TextView
            android:id="@+id/goodMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/goodMorning"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="82dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/goodMorning"
            android:layout_alignBottom="@+id/goodMorning2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:contentDescription=""
            app:layout_constraintBottom_toBottomOf="@+id/goodMorning2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/goodMorning"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_below="@+id/text_day3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="@color/light_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_day3" />

        <Button
            android:id="@+id/weekbutton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/monthbutton"
            android:layout_alignBottom="@+id/monthbutton"
            android:layout_toStartOf="@+id/monthbutton"
            android:backgroundTint="@color/background_blue"
            android:text="@string/week"
            android:textColor="@color/dark_blue_green"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/monthbutton"
            app:layout_constraintEnd_toStartOf="@+id/monthbutton"
            app:layout_constraintTop_toTopOf="@+id/monthbutton"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/text_day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Wednesday"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_event_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_above="@+id/button"
            android:layout_below="@+id/divider3"
            android:layout_alignStart="@+id/divider3"
            android:layout_alignEnd="@+id/divider3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_day3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>